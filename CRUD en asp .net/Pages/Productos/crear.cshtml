@page
@model CRUD_en_asp_.net.Pages.Productos.crearModel
@{
    ViewData["Title"] = "Crear nuevo producto";
}

<h3 class="text-center">Página de inicio</h3>
<div class="cart">
    <div class="card-header bg-dark">
        <div class="row">
            <div class="col-sm-9">
                <h2 class="text-info">Crear nuevo producto</h2>
            </div>
        </div>
    </div>

    <div class="card-body">
        <form method="POST">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="container" style="padding:30px">
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Producto.NombreProducto">Nombre</label>
                        </div>
                        <div class="col-sm-2">
                            <input asp-for="Producto.NombreProducto" class="form-control" />
                        </div>
                        <div class="col-sm-2">
                            <span asp-validation-for="Producto.NombreProducto" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Producto.Descripcion">Descripción</label>
                        </div>
                        <div class="col-sm-2">
                            <input asp-for="Producto.Descripcion" class="form-control" />
                        </div>
                        <div class="col-sm-2">
                            <span asp-validation-for="Producto.Descripcion" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Producto.EndStock">Cantidad</label>
                        </div>
                        <div class="col-sm-2">
                            <input asp-for="Producto.EndStock" class="form-control" />
                        </div>
                        <div class="col-sm-2">
                            <span asp-validation-for="Producto.EndStock" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Producto.Precio">Precio</label>
                        </div>
                        <div class="col-sm-2">
                            <input asp-for="Producto.Precio" class="form-control" />
                        </div>
                        <div class="col-sm-2">
                            <span asp-validation-for="Producto.Precio" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-4">
                    <div class="row">
                        <div class="col-sm-2 offset-sm-2">
                            <input type="submit" value="Crear" class="btn btn-primary form-control" />
                        </div>
                        <div class="col-sm-4">
                            <a asp-page="Index" class="btn btn-success form-control">Volver a lista</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>